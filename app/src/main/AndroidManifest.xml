<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".ComposeHubApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BooksHub"
        tools:targetApi="31">
        <activity
            android:name=".uiactivities.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".uiactivities.AuthActivity"
            android:exported="false" />
        <activity
            android:theme="@style/Theme.RemoveSplashScreenTheme"
            android:name=".uiactivities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.github.curioustools.bookshub.uiactivities.BookDetailsActivity" android:exported="false"  />
<!--        <activity android:name="io.github.curioustools.bookshub.uiactivities.BookPreviewActivity" android:exported="false"  />-->
<!--        <activity android:name="io.github.curioustools.bookshub.uiactivities.BookUploadActivity" android:exported="false"  />-->
        <activity android:name="io.github.curioustools.bookshub.uiactivities.ProfileActivity" android:exported="false"  />
        <activity android:name="io.github.curioustools.bookshub.uiactivities.SearchActivity" android:exported="false"  />
    </application>

</manifest>